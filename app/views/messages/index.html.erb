<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info glyphicon glyphicon-user">&nbsp;<%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <p>名前:<%= f.text_field:name, class: "form-control" %></p>
    
    <p>内容:<%= f.text_area:body, class: "form-control",rows:"10" %></p>
    
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>




